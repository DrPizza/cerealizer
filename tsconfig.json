{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": false,
		"target": "es2017",
		"lib": ["es2018", "es2017", "esnext.array", "esnext.symbol"],
		"noEmitHelpers": true,
		"noImplicitAny": true,
		"strict": true,
		"noImplicitReturns" : true,
		"preserveConstEnums": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"pretty": true
	},
	"include": [
		"lib/**/*"
	],
    "exclude": [
        "node_modules/**/*"
    ]
}
